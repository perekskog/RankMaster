rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /products/{productId} {
      // Allow reading single products and the entire collection
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    match /products/{wildcard=**} {
      allow read: if true;
    }

    match /gradedRankings/{rankingId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /comparativeRankings/{rankingId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
